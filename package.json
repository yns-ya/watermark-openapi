{
  "name": "watermark-api",
  "version": "1.0.0",
  "description": "Stateless serverless image watermarking API (Netlify Functions) - no storage, ephemeral processing only",
  "private": true,
  "packageManager": "pnpm@9.0.0",
  "pnpm": {
    "supportedArchitectures": {
      "os": ["darwin", "linux"],
      "cpu": ["x64", "arm64"]
    }
  },
  "scripts": {
    "preinstall": "npx only-allow pnpm",
    "prebuild": "rimraf dist",
    "build": "echo 'Serverless only: no Nest build'",
    "build:netlify": "tsc --project tsconfig.netlify.json",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start": "echo 'Serverless only: use netlify dev'",
    "start:dev": "netlify dev",
    "start:debug": "echo 'Serverless only'",
    "start:prod": "echo 'Serverless only'",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "echo 'N/A for serverless'",
    "generate-jwt": "node scripts/generate-token.js"
  },
  "dependencies": {
    "@hono/swagger-ui": "^0.5.2",
    "@hono/zod-openapi": "^1.1.5",
    "busboy": "^1.6.0",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.0",
    "hono": "^4.11.1",
    "reflect-metadata": "^0.2.2",
    "rxjs": "^7.8.1",
    "sharp": "^0.33.5",
    "zod": "^4.2.1"
  },
  "devDependencies": {
    "@netlify/functions": "^2.4.1",
    "@types/busboy": "^1.5.4",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.11",
    "@types/node": "^20.14.0",
    "@types/passport-jwt": "^4.0.0",
    "@types/supertest": "^6.0.2",
    "@typescript-eslint/eslint-plugin": "^6.19.0",
    "@typescript-eslint/parser": "^6.19.0",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.3",
    "jest": "^29.7.0",
    "netlify-cli": "^23.13.0",
    "prettier": "^3.2.4",
    "rimraf": "^5.0.5",
    "source-map-support": "^0.5.21",
    "supertest": "^6.3.4",
    "ts-jest": "^29.1.1",
    "ts-loader": "^9.5.1",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "keywords": [
    "watermark",
    "image-processing",
    "serverless",
    "netlify-functions",
    "sharp",
    "stateless",
    "ephemeral",
    "api"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/yns-ya/watermark-openapi.git"
  },
  "license": "MIT",
  "author": "yns-ya"
}
